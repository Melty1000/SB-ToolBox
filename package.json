{
  "name": "sb-toolbox",
  "version": "0.1.0",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "dev": "next dev --webpack -p 3001",
    "dev:electron": "concurrently -k \"next dev --webpack -p 3001\" \"wait-on http://localhost:3001 && electron .\"",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsup electron/main.ts electron/preload.ts --format cjs --out-dir dist --clean --external electron",
    "build:renderer": "next build",
    "dist": "npm run build && electron-builder",
    "start": "next start",
    "lint": "eslint"
  },
  "build": {
    "appId": "com.antigravity.sbtoolbox",
    "productName": "SB ToolBox",
    "files": [
      "dist/**/*",
      "out/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "portable",
        "zip"
      ],
      "icon": "build/icon.png"
    },
    "icon": "build/icon.png"
  },
  "dependencies": {
    "@gsap/react": "^2.1.2",
    "@monaco-editor/react": "^4.7.0",
    "clsx": "^2.1.1",
    "electron-serve": "^1.3.0",
    "electron-updater": "^6.7.3",
    "file-saver": "^2.0.5",
    "fs-extra": "^11.3.3",
    "gsap": "^3.14.2",
    "jszip": "^3.10.1",
    "lucide-react": "^0.562.0",
    "next": "16.1.4",
    "pako": "^2.1.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/electron": "^1.4.38",
    "@types/file-saver": "^2.0.7",
    "@types/node": "^20.19.30",
    "@types/pako": "^2.0.4",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "electron": "^40.0.0",
    "electron-builder": "^26.7.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.4",
    "tsup": "^8.5.1",
    "typescript": "^5",
    "wait-on": "^9.0.3"
  }
}